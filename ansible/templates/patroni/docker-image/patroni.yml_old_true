scope: patroni
namespace: /service/

bootstrap:
    dcs:
        ttl: 30
        loop_wait: 10
        retry_timeout: 10
        maximum_lag_on_failover: 1048576
        postgresql:
            use_pg_rewind: true
            parameters:
        archive_mode: "on"
        archive_command: mkdir -p ../wal_archive && test ! -f ../wal_archive/%f && cp %p ../wal_archive/%f
        max_parallel_workers: 8
        min_wal_size: 1GB
        max_wal_size: 2GB
        max_connections: 100
        max_wal_senders: 5

    initdb:
    - encoding: UTF8
    - data-checksums

    pg_hba:
    - host replication all all md5
    - host all all all md5

consul:
  scheme: http

postgresql:
    data_dir: /data/patroni
    bin_dir: /usr/lib/postgresql/13/bin
    pgpass: /tmp/pgpass
    parameters:
        unix_socket_directories: '.'
        log_checkpoints: 'on'
        log_duration: 'on'
        log_hostname: 'off'
        log_line_prefix: '[postgres] %m %h %s %u %d %x %e: '
        log_lock_waits: 'off'
        log_statement: 'ddl'
        log_temp_files: '0'
        log_timezone: 'UTC'
        log_parser_stats: 'off'
        log_planner_stats: 'off'
        log_executor_stats: 'off'
        log_statement_stats: 'off'

log:
  level: INFO
  format: '[patroni] %(asctime)s %(levelname)s: %(message)s '

tags:
    nofailover: false
    noloadbalance: false
    clonefrom: false
    nosync: false

